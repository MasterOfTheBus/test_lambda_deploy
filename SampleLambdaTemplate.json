{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Resources": {
        "TestLambda": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "Description": "Lambda to invoke",
                "Runtime": "python3.9",
                "PackageType": "Zip",
                "FunctionName": "TestFunction",
                "Handler": "sample_lambda_handler.handler",
                "Code": {
                    "S3Bucket": "sng-lambda-deployments-bucket",
                    "S3Key": "sample_lambda_handler.zip"
                },
                "Role": {"Fn::GetAtt": ["LambdaExecRole", "Arn"]}
            }
        },
        "LambdaExecRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "RoleName": "LambdaExecRole",
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                },
                "Path": "/",
                "Policies": [{
                    "PolicyName": "exec",
                    "PolicyDocument": {
                        "Version": "2012-10-17",
                        "Statement": [
                            {
                                "Effect": "Allow",
                                "Action": [
                                    "logs:*"
                                ],
                                "Resource": "arn:aws:logs:*:*:*"
                            },
                            {
                                "Effect": "Allow",
                                "Action": [
                                    "s3:GetObject",
                                    "s3:PutObject"
                                ],
                                "Resource": "arn:aws:s3:::*"
                            }
                        ]
                    }
                }]
            }
        }
    }
}